@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-4">
                <i class="fas fa-graduation-cap text-primary"></i> Welcome to Online Exam System
            </h1>
            <p class="lead text-muted mb-5">
                A comprehensive platform for creating, managing, and taking online examinations
            </p>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated != true)
    {
        <!-- Guest View -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center p-5">
                        <h3 class="mb-3">Get Started</h3>
                        <p class="text-muted mb-0">
                            Please use the <strong>Login</strong> button at the top to access the exam system.
                            If you don't have an account, contact your administrator to create one for you.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Authenticated View -->
        <div class="row">
            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-cog fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Admin Panel</h5>
                            <p class="card-text">Manage exams, questions, and users from the administration panel.</p>
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">Go to Admin Panel</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-file-alt fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Take Exams</h5>
                            <p class="card-text">Browse available exams and test your knowledge.</p>
                            <a href="@Url.Action("AvailableExams", "Exam")" class="btn btn-success">View Exams</a>
                        </div>
                    </div>
                </div>
            }

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                        <h5 class="card-title">View Results</h5>
                        <p class="card-text">Track your performance and view detailed exam results.</p>
                        <a href="@Url.Action("MyResults", "Exam")" class="btn btn-info">View Results</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-user fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Profile</h5>
                        <p class="card-text">Manage your account settings and personal information.</p>
                        <a href="#" class="btn btn-warning">Profile Settings</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Features -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h4 class="text-center mb-4">System Features</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Secure authentication system</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Role-based access control</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Multiple choice questions</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Automatic scoring and evaluation</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Exam timer functionality</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Detailed result analysis</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Admin panel for exam management</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>User-friendly interface</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}
