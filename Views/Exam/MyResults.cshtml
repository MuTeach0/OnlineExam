@model List<OnlineExam.ViewModels.ExamResultViewModel>
@{
    ViewData["Title"] = "My Exam Results";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">My Exam Results</h1>
            <p class="text-center text-muted">Track your performance across all exams</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Summary Statistics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body">
                        <div class="h3">@Model.Count()</div>
                        <small>Total Exams Taken</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white text-center">
                    <div class="card-body">
                        <div class="h3">@Model.Count(r => r.IsPassed)</div>
                        <small>Exams Passed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white text-center">
                    <div class="card-body">
                        <div class="h3">@Model.Count(r => !r.IsPassed)</div>
                        <small>Exams Failed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white text-center">
                    <div class="card-body">
                        <div class="h3">@Model.Average(r => r.Score).ToString("F1")%</div>
                        <small>Average Score</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Table -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Exam</th>
                                        <th>Score</th>
                                        <th>Status</th>
                                        <th>Questions</th>
                                        <th>Date Taken</th>
                                        <th>Duration</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@result.ExamTitle</strong>
                                            </td>
                                            <td>
                                                <span class="h6 @(result.IsPassed ? "text-success" : "text-danger")">
                                                    @result.Score.ToString("F1")%
                                                </span>
                                            </td>
                                            <td>
                                                @if (result.IsPassed)
                                                {
                                                    <span class="badge bg-success">PASSED</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">FAILED</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @result.CorrectAnswers/@result.TotalQuestions correct
                                                </small>
                                            </td>
                                            <td>
                                                <small>@result.CompletedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <small>@result.Duration.ToString(@"mm\:ss")</small>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("ExamResult", "Exam", new { id = result.ResultId })"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>No Exam Results Yet</h4>
                    <p>You haven't taken any exams yet. Start by taking an available exam!</p>
                    <a href="@Url.Action("AvailableExams", "Exam")" class="btn btn-primary">
                        <i class="fas fa-play"></i> Take an Exam
                    </a>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("AvailableExams", "Exam")" class="btn btn-primary me-2">
                <i class="fas fa-list"></i> View Available Exams
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}
