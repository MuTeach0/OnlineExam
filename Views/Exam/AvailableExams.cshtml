@using OnlineExam.ViewModels
@model List<AvailableExamViewModel>
@{
    ViewData["Title"] = "Available Exams";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Available Exams</h1>
            <p class="text-center text-muted">Select an exam to start testing your knowledge</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var exam in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@exam.Title</h5>
                            <p class="card-text">@exam.Description</p>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">
                                        <i class="fas fa-clock"></i> @exam.DurationMinutes min
                                    </small>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">
                                        <i class="fas fa-question-circle"></i> @exam.QuestionCount questions
                                    </small>
                                </div>
                            </div>

                            @if (exam.HasTaken)
                            {
                                <div class="alert alert-success mb-3">
                                    <i class="fas fa-check-circle"></i> You have already taken this exam
                                </div>
                                <a href="@Url.Action("MyResults", "Exam")" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-chart-bar"></i> View Results
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("TakeExam", "Exam", new { id = exam.Id })"
                                   class="btn btn-primary w-100">
                                    <i class="fas fa-play"></i> Start Exam
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>No Exams Available</h4>
                    <p>There are currently no active exams available. Please check back later.</p>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("MyResults", "Exam")" class="btn btn-outline-info me-2">
                <i class="fas fa-chart-bar"></i> My Exam Results
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="fas fa-home"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}
