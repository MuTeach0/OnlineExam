@model OnlineExam.ViewModels.ExamResultViewModel
@{
    ViewData["Title"] = "Exam Result: " + Model.ExamTitle;
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2 class="mb-0">Exam Results</h2>
                    <p class="text-muted mb-0">@Model.ExamTitle</p>
                </div>
                <div class="card-body">
                    <!-- Score Summary -->
                    <div class="text-center mb-4">
                        <div class="display-4 fw-bold @(Model.IsPassed ? "text-success" : "text-danger")">
                            @Model.Score.ToString("F1")%
                        </div>
                        <div class="h5 mb-3">
                            @if (Model.IsPassed)
                            {
                                <span class="badge bg-success fs-6">PASSED</span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">FAILED</span>
                            }
                        </div>
                        <p class="text-muted">
                            Passing Score: 60% | Your Score: @Model.Score.ToString("F1")%
                        </p>
                    </div>

                    <!-- Detailed Results -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <div class="h3 text-success">@Model.CorrectAnswers</div>
                                    <small class="text-muted">Correct Answers</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <div class="h3 text-danger">@Model.IncorrectAnswers</div>
                                    <small class="text-muted">Incorrect Answers</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h5">@Model.TotalQuestions</div>
                                <small class="text-muted">Total Questions</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h5">@Model.Duration.ToString(@"mm\:ss")</div>
                                <small class="text-muted">Time Taken</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h5">@Model.StartedAt.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">Date Taken</small>
                            </div>
                        </div>
                    </div>

                    <!-- Performance Message -->
                    <div class="alert @(Model.IsPassed ? "alert-success" : "alert-warning") text-center">
                        @if (Model.IsPassed)
                        {
                            <i class="fas fa-trophy fa-2x mb-2"></i>
                            <h5>Congratulations!</h5>
                            <p class="mb-0">You have successfully passed the exam. Great job!</p>
                        }
                        else
                        {
                            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                            <h5>Keep Trying!</h5>
                            <p class="mb-0">You didn't reach the passing score this time. Review the material and try again!</p>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="text-center">
                        <a href="@Url.Action("AvailableExams", "Exam")" class="btn btn-primary me-2">
                            <i class="fas fa-list"></i> View Available Exams
                        </a>
                        <a href="@Url.Action("MyResults", "Exam")" class="btn btn-outline-info me-2">
                            <i class="fas fa-chart-bar"></i> My Results
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}
