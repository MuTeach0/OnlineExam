@model OnlineExam.ViewModels.QuestionViewModel
@{
    ViewData["Title"] = "Edit Question";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="mb-0">Edit Question</h3>
                    @* <small class="text-muted">Exam: @Model.ExamTitle</small> *@
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="ExamId" class="form-label">Select Exam *</label>
                            <select asp-for="ExamId" class="form-select" asp-items="@(new SelectList(ViewBag.Exams, "Id", "Title"))">
                                <option value="">-- Select an Exam --</option>
                            </select>
                            <span asp-validation-for="ExamId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Question *</label>
                            <textarea asp-for="Title" class="form-control" rows="3"
                                      placeholder="Enter your question here"></textarea>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ChoiceA" class="form-label">Choice A *</label>
                                    <input asp-for="ChoiceA" class="form-control" placeholder="Enter choice A" />
                                    <span asp-validation-for="ChoiceA" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ChoiceB" class="form-label">Choice B *</label>
                                    <input asp-for="ChoiceB" class="form-control" placeholder="Enter choice B" />
                                    <span asp-validation-for="ChoiceB" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ChoiceC" class="form-label">Choice C *</label>
                                    <input asp-for="ChoiceC" class="form-control" placeholder="Enter choice C" />
                                    <span asp-validation-for="ChoiceC" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ChoiceD" class="form-label">Choice D *</label>
                                    <input asp-for="ChoiceD" class="form-control" placeholder="Enter choice D" />
                                    <span asp-validation-for="ChoiceD" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CorrectAnswer" class="form-label">Correct Answer *</label>
                            <select asp-for="CorrectAnswer" class="form-select">
                                <option value="">-- Select Correct Answer --</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                            </select>
                            <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GetAll", "AdminQuestion")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Questions
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Question
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
