@model List<OnlineExam.Models.Question>
@{
    ViewData["Title"] = "Manage Questions";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Manage Questions</h1>
                <a href="@Url.Action("CreateQuestion", "Admin")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Question
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Question</th>
                                        <th>Exam</th>
                                        <th>Choices</th>
                                        <th>Correct Answer</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var question in Model)
                                    {
                                        <tr>
                                            <td>@(question.Title.Length > 60 ? question.Title.Substring(0, 60) + "..." : question.Title)</td>
                                            <td>@question.Exam.Title</td>
                                            <td>
                                                <small>
                                                    <strong>A:</strong> @(question.ChoiceA.Length > 30 ? question.ChoiceA.Substring(0, 30) + "..." : question.ChoiceA)<br />
                                                    <strong>B:</strong> @(question.ChoiceB.Length > 30 ? question.ChoiceB.Substring(0, 30) + "..." : question.ChoiceB)<br />
                                                    <strong>C:</strong> @(question.ChoiceC.Length > 30 ? question.ChoiceC.Substring(0, 30) + "..." : question.ChoiceC)<br />
                                                    <strong>D:</strong> @(question.ChoiceD.Length > 30 ? question.ChoiceD.Substring(0, 30) + "..." : question.ChoiceD)
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@question.CorrectAnswer</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditQuestion", "Admin", new { id = question.Id })"
                                                       class="btn btn-sm btn-outline-primary" title="Edit Question">
                                                        <i class="bi bi-pencil-square"></i>   <!-- edit -->
                                                    </a>
                                                    <form asp-action="DeleteQuestion" asp-route-id="@question.Id"
                                                          method="post" style="display: inline;"
                                                          onsubmit="return confirm('Are you sure you want to delete this question?');">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Question">
                                                            <i class="bi bi-trash"></i>           <!-- delete -->
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>No Questions Found</h4>
                    <p>You haven't added any questions yet. Click the "Add New Question" button to get started.</p>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Admin Panel
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}
